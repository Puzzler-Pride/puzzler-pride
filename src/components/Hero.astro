---
import { Icon } from 'astro-icon/components'
---

<section class="hero my-24 py-16">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-5xl md:text-left lg:text-8xl text-gradient">
          Puzzler Pride 2025: Intersectionality Edition
        </h1>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="https://l.puz.fun/pp2024">
            <Icon name="ion:document-outline" />
            Get the PDF
          </a>
          <a
            class="button has-icon color-secondary"
            href="/2025"
          >
            <Icon name="ion:list-outline" />
            Learn More
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss" is:global>
  .hero {
    background: var(--background) url('/src/assets/img/banner.png') no-repeat top right;
    background-size: cover;
  }

